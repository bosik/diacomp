<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	<display-name>CompServer</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>

	<filter>
		<filter-name>AuthFilter</filter-name>
		<filter-class>org.bosik.diacomp.filters.AuthFilter</filter-class>
		<!-- <init-param> <param-name>test</param-name> <param-value>testValue</param-value> 
			</init-param> -->
	</filter>
	<filter-mapping>
		<filter-name>AuthFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<!-- <servlet>
		<servlet-name>ServletAuth</servlet-name>
		<servlet-class>org.bosik.diacomp.servlets.ServletAuth</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ServletAuth</servlet-name>
		<url-pattern>/api/login</url-pattern>
	</servlet-mapping> -->

