<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/meal_editor"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="bottom|fill"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layoutMealParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="top"
        android:orientation="vertical"
        android:paddingTop="@dimen/padding_small"
        android:visibility="visible"
        tools:context=".ActivityEditorMeal" >

        <TextView
            android:id="@+id/labelMealTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/editor_common_field_time" />

        <RelativeLayout
            android:id="@+id/layoutMealDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TimePicker
                android:id="@+id/pickerMealTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true" />

            <DatePicker
                android:id="@+id/pickerMealDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/pickerMealTime"
                android:paddingLeft="@dimen/padding_small" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/padding_small"
            android:background="#F0F0F0" >

            <LinearLayout
                android:id="@+id/layoutMealStat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

            <TextView
                    android:id="@+id/textMealProts"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:paddingLeft="@dimen/padding_medium"
                    android:text="@string/editor_meal_label_carbs"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textMealFats"
                    android:layout_height="wrap_content"                    
                     android:layout_width="match_parent"
                    android:paddingLeft="@dimen/padding_medium"
                    android:text="@string/editor_meal_label_carbs"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                
                <TextView
                    android:id="@+id/textMealCarbs"
                    android:layout_height="wrap_content"                    
                     android:layout_width="match_parent"
                    android:paddingLeft="@dimen/padding_medium"
                    android:text="@string/editor_meal_label_carbs"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                
                <TextView
                    android:id="@+id/textMealValue"
                    android:layout_height="wrap_content"                    
                     android:layout_width="match_parent"
                    android:paddingLeft="@dimen/padding_medium"
                    android:text="@string/editor_meal_label_carbs"
                    android:textSize="20sp"
                    android:textStyle="bold" />
              </LinearLayout>  
                
            <TextView
                android:id="@+id/textMealCorrection"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:paddingRight="@dimen/padding_medium"
                android:text="@string/editor_meal_label_correction"
                android:textSize="20sp"
                android:textStyle="bold|normal" />

            <TextView
                android:id="@+id/textMealDose"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="@dimen/padding_medium"
                android:text="@string/editor_meal_label_dose"
                android:textSize="20sp"
                android:textStyle="bold|normal" />

        </LinearLayout>
    </LinearLayout>

    <org.bosik.diacomp.android.frontend.views.fdpicker.MealEditorView
        android:id="@+id/mealEditorMeal"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>