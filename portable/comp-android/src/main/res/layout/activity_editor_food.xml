<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="vertical"
            android:padding="@dimen/padding_small"
            android:paddingBottom="@dimen/padding_small"
            tools:context=".ActivityEditorFood">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:labelFor="@+id/editFoodName"
                android:paddingTop="@dimen/padding_small"
                android:text="@string/editor_food_field_name"
                android:paddingBottom="@dimen/padding_medium"/>

        <EditText
                android:id="@+id/editFoodName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:layout_marginBottom="@dimen/padding_small">

            <requestFocus/>
        </EditText>

        <TextView
                android:text="@string/editor_food_nutrition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_medium"
                android:paddingBottom="@dimen/padding_medium"/>
        <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding_small"
                    android:gravity="bottom">
                <TextView
                        android:labelFor="@+id/editFoodProts"
                        android:text="@string/editor_food_field_prots"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:paddingLeft="@dimen/padding_medium"
                        android:paddingRight="@dimen/padding_medium"/>
                <EditText
                        android:id="@+id/editFoodProts"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:digits="0123456789.,"
                        android:inputType="numberDecimal"
                        android:imeOptions="actionNext">
                </EditText>
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding_small"
                    android:gravity="bottom">
                <TextView
                        android:labelFor="@+id/editFoodFats"
                        android:text="@string/editor_food_field_fats"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:paddingLeft="@dimen/padding_medium"
                        android:paddingRight="@dimen/padding_medium"/>
                <EditText
                        android:id="@+id/editFoodFats"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:digits="0123456789.,"
                        android:inputType="numberDecimal"
                        android:imeOptions="actionNext">
                </EditText>
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/padding_small"
                    android:gravity="bottom">
                <TextView
                        android:labelFor="@+id/editFoodCarbs"
                        android:text="@string/editor_food_field_carbs"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:paddingLeft="@dimen/padding_medium"
                        android:paddingRight="@dimen/padding_medium"/>
                <EditText
                        android:id="@+id/editFoodCarbs"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:digits="0123456789.,"
                        android:inputType="numberDecimal"
                        android:imeOptions="actionNext">
                </EditText>
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding_small"
                    android:gravity="bottom">
                <TextView
                        android:labelFor="@+id/editFoodValue"
                        android:text="@string/editor_food_field_value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:paddingLeft="@dimen/padding_medium"
                        android:paddingRight="@dimen/padding_medium"/>
                <EditText
                        android:id="@+id/editFoodValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:digits="0123456789.,"
                        android:inputType="numberDecimal">
                </EditText>
            </TableRow>
        </TableLayout>

        <Button
                android:id="@+id/buttonFoodOK"
                android:text="@string/editor_common_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_medium"/>
    </LinearLayout>

</ScrollView>