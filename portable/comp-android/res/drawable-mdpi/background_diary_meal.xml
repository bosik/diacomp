<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_activated="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
        	<solid android:color="@color/diary_meal_sel" />
        	<stroke android:width="2dp" android:color="@color/diary_border_sel" android:dashWidth="6dp" android:dashGap="3dp"/>
       	</shape>
    </item>
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
        	<solid android:color="@color/diary_meal_sel" />
        	<stroke android:width="1dp" android:color="@color/diary_border" />
       	</shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
        	<solid android:color="@color/diary_meal" />
        	<stroke android:width="1dp" android:color="@color/diary_border" />
       	</shape>
    </item>
</selector>