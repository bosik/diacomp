<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/padding_tiny"
    android:layout_marginLeft="@dimen/padding_tiny"
    android:layout_marginRight="@dimen/padding_tiny"
    android:layout_marginTop="@dimen/padding_tiny"
    android:gravity="center_vertical"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/itemBaseIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@+id/editor_food_title"
        android:paddingEnd="@dimen/padding_tiny"
        android:paddingLeft="@dimen/padding_large"
        android:paddingRight="@dimen/padding_tiny"
        android:paddingStart="@dimen/padding_large"
        android:src="@drawable/button_foodbase" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/baseItemFoodName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_small"
            android:layout_marginRight="@dimen/padding_small"
            android:text="Demo food"
            android:textSize="@dimen/diaryTextSizeBase"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/baseItemFoodInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_small"
            android:layout_marginRight="@dimen/padding_small"
            android:text="P: 4.2   F: 3.2   C: 4.7   V: 42"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/diaryTextSizeSmall"
            tools:ignore="HardcodedText" />
    </LinearLayout>

</LinearLayout>