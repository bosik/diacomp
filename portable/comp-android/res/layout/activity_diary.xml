<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/diary"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="bottom|fill"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="fill_parent"
            android:layout_height="57dp"
            android:baselineAligned="false"
            android:gravity="top"
            android:paddingTop="@dimen/padding_small"
            android:visibility="visible" >

            <LinearLayout
                android:id="@+id/prevDayLayout"
                android:layout_width="50dp"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/buttonPrevDay"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:drawableTop="@drawable/diary_prev"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/selectDayLayout"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.17"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/buttonSelectDay"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nextDayLayout"
                android:layout_width="50dp"
                android:layout_height="fill_parent"
                android:gravity="right"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/buttonNextDay"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:drawableTop="@drawable/diary_next"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.42"
            android:scrollbars="vertical" >

            <org.bosik.diacomp.android.frontend.views.diary.DiaryView
                android:id="@+id/diaryViewLayout"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:orientation="vertical" />
        </ScrollView>

        <LinearLayout
            android:id="@+id/bottomLayout"
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom|top"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/buttonAddBlood"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/diary_addblood"
                android:paddingBottom="0dp" />

            <Button
                android:id="@+id/buttonAddIns"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@drawable/diary_addins"
                android:paddingBottom="0dp" />

            <Button
                android:id="@+id/buttonAddMeal"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@drawable/diary_addmeal"
                android:paddingBottom="0dp" />

            <Button
                android:id="@+id/buttonAddNote"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@drawable/diary_addnote"
                android:paddingBottom="0dp" />
        </LinearLayout>
    </LinearLayout>
    <!-- The navigation drawer -->

    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#444"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp" />

</android.support.v4.widget.DrawerLayout>