<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/diary"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/app_background"
    android:gravity="bottom|fill"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="fill_parent"
        android:layout_height="57dp"
        android:baselineAligned="false"
        android:gravity="top"
        android:paddingTop="@dimen/padding_small"
        android:visibility="visible" >

        <LinearLayout
            android:id="@+id/prevDayLayout"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <Button
                android:id="@+id/buttonPrevDay"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/diary_prev"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/selectDayLayout"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.17"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <Button
                android:id="@+id/buttonSelectDay"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:enabled="false" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nextDayLayout"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:gravity="right"
            android:orientation="vertical" >

            <Button
                android:id="@+id/buttonNextDay"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/diary_next"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.42"
        android:scrollbars="vertical" >

        <org.bosik.diacomp.android.frontend.views.diary.DiaryView
            android:id="@+id/diaryViewLayout"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:orientation="vertical" />
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom|top"
        android:orientation="horizontal" 
        style="?android:attr/buttonBarStyle">

        <Button
            android:id="@+id/buttonAddBlood"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/diary_addblood"
            android:paddingBottom="0dp"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/buttonAddIns"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/diary_addins"
            android:paddingBottom="0dp"
            style="?android:attr/buttonBarButtonStyle"/>

        <Button
            android:id="@+id/buttonAddMeal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/diary_addmeal"
            android:paddingBottom="0dp"
            style="?android:attr/buttonBarButtonStyle"/>

        <Button
            android:id="@+id/buttonAddNote"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/diary_addnote"
            android:paddingBottom="0dp"
            style="?android:attr/buttonBarButtonStyle"/>
    </LinearLayout>

</LinearLayout>